# Database
DATABASE_URL="postgresql://user:password@localhost:5432/kainat"

# Next Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# Stripe (keys)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Product IDs (create in Stripe dashboard)
STRIPE_PRICE_MONTHLY="price_..."
STRIPE_PRICE_THREE_MONTH="price_..."
STRIPE_PRICE_YEARLY="price_..."

# Railway
# RAILWAY_PROJECT_ID and RAILWAY_ENVIRONMENT_ID are auto-provided when running on Railway.
# Set them manually only if testing locally against the Railway API.
RAILWAY_TOKEN="your-railway-api-token"              # Create at: Railway dashboard → Account Settings → API
RAILWAY_PROJECT_ID="your-project-id"
RAILWAY_ENVIRONMENT_ID="your-environment-id"

# OpenClaw instance image deployed per user
OPENCLAW_IMAGE="ghcr.io/openclaw/openclaw:latest"
# Start command inside each OpenClaw container — override if your image uses a different entrypoint
OPENCLAW_CMD="openclaw"

# Port counter base (still used as a unique DB value; no longer binds an actual port)
BASE_PORT=18790
MAX_INSTANCES=100

# Encryption (for storing API keys)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-char-encryption-key-here"

# Pairing Microservice (optional - enables one-click pairing)
PAIRING_SERVICE_URL="https://your-pairing-service.railway.app"
PAIRING_SERVICE_API_KEY="generate-a-secure-random-key-here"

# Optional: Admin notifications
ADMIN_EMAIL="admin@yourdomain.com"
DISCORD_WEBHOOK_URL=""
